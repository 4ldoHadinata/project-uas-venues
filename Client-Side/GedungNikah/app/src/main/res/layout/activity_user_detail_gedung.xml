<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="30dp"
    tools:context=".UserDetailGedung">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="User \nDetail Gedung"
        android:textSize="25dp"
        android:textAlignment="center"
        android:textColor="#000" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="50dp"
        android:text="Nama Gedung"
        android:textSize="17dp"
        android:textColor="#000" />

    <EditText
        android:id="@+id/EditNamaGedung"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="15dp"
        android:hint="Nama Gedung"
        android:textAlignment="center" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="50dp"
        android:text="Alamat"
        android:textSize="17dp"
        android:textColor="#000" />

    <EditText
        android:id="@+id/EditAlamat"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:hint="Alamat"
        android:textSize="15dp"
        android:textAlignment="center" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="50dp"
        android:text="Harga"
        android:textSize="17dp"
        android:textColor="#000" />

    <EditText
        android:id="@+id/EditHarga"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:hint="Harga"
        android:textSize="15dp"
        android:textAlignment="center" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="50dp"
        android:text="Luas"
        android:textSize="17dp"
        android:textColor="#000" />

    <EditText
        android:id="@+id/EditLuas"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:hint="Luas"
        android:textSize="15dp"
        android:textAlignment="center" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="50dp"
        android:text="Daya Tampung"
        android:textSize="17dp"
        android:textColor="#000" />

    <EditText
        android:id="@+id/EditDayaTampung"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:hint="Daya Tampung"
        android:textSize="15dp"
        android:textAlignment="center" />

    <Button
        android:id="@+id/btnHubungi"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Hubungi"
        android:textAllCaps="false"
        android:layout_gravity="center" />

</LinearLayout>